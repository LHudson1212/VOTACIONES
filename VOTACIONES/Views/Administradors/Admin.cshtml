
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administrador - Votaciones</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <!-- Menú -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Administrador</a>
            <div class="dropdown ms-auto">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Menú
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="votacion.html">Ir a Votación</a></li>
                    <li><a class="dropdown-item" href="login.html">Salir</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <div class="container mt-4">
        <h2 class="mb-4 text-center">Resultados por Participante</h2>

        <!-- Votos por jornada -->
        <div id="seccionMixta" class="mb-5">
            <h4 class="text-primary">Jornada Mixta</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Foto</th>
                            <th>Nombre</th>
                            <th>Documento</th>
                            <th>Voto</th>
                        </tr>
                    </thead>
                    <tbody id="tablaMixta"></tbody>
                </table>
            </div>
        </div>

        <div id="seccionDiurna" class="mb-5">
            <h4 class="text-success">Jornada Diurna</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Foto</th>
                            <th>Nombre</th>
                            <th>Documento</th>
                            <th>Voto</th>
                        </tr>
                    </thead>
                    <tbody id="tablaDiurna"></tbody>
                </table>
            </div>
        </div>

        <div id="seccionNocturna" class="mb-5">
            <h4 class="text-warning">Jornada Nocturna</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Foto</th>
                            <th>Nombre</th>
                            <th>Documento</th>
                            <th>Voto</th>
                        </tr>
                    </thead>
                    <tbody id="tablaNocturna"></tbody>
                </table>
            </div>
        </div>

        <!-- Totales -->
        <h3 class="text-center mb-3">Total de Votos por Jornada</h3>
        <div class="row text-center">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-primary text-white">Mixta</div>
                    <div class="card-body">
                        <h4 id="votosMixta">0</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-success text-white">Diurna</div>
                    <div class="card-body">
                        <h4 id="votosDiurna">0</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-warning text-white">Nocturna</div>
                    <div class="card-body">
                        <h4 id="votosNocturna">0</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Simulación de votos
    const votos = [
      { nombre: "Juan", documento: "123", jornada: "Mixta", voto: "Candidato A", foto: "imagenes/candidato1.png" },
      { nombre: "Ana", documento: "456", jornada: "Diurna", voto: "Candidato B", foto: "https://via.placeholder.com/60" },
      { nombre: "Luis", documento: "789", jornada: "Nocturna", voto: "Candidato A", foto: "https://via.placeholder.com/60" },
      { nombre: "Laura", documento: "321", jornada: "Mixta", voto: "Candidato B", foto: "https://via.placeholder.com/60" },
    ];

    let mixta = 0, diurna = 0, nocturna = 0;

    votos.forEach(v => {
      const row = `
        <tr>
          <td><img src="${v.foto}" class="rounded-circle" width="60" height="60" style="object-fit: cover;"></td>
          <td>${v.nombre}</td>
          <td>${v.documento}</td>
          <td>${v.voto}</td>
        </tr>
      `;

      if (v.jornada === "Mixta") {
        document.getElementById("tablaMixta").innerHTML += row;
        mixta++;
      } else if (v.jornada === "Diurna") {
        document.getElementById("tablaDiurna").innerHTML += row;
        diurna++;
      } else if (v.jornada === "Nocturna") {
        document.getElementById("tablaNocturna").innerHTML += row;
        nocturna++;
      }
    });

    document.getElementById("votosMixta").textContent = mixta;
    document.getElementById("votosDiurna").textContent = diurna;
    document.getElementById("votosNocturna").textContent = nocturna;
    </script>
</body>
</html>
