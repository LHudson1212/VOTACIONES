@model IEnumerable<VOTACIONES.Models.Postulados>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administrador - Votaciones</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        :root {
            --sena-green: #006633;
            --sena-dark: #1a2e1a;
            --sena-light: #ffffff;
            --sena-accent: #e9f5e9;
            --sena-gradient: linear-gradient(135deg, #006633, #009966);
        }

        body {
            background: var(--sena-accent);
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
            background: var(--sena-gradient);
            color: var(--sena-light);
            padding-top: 1rem;
            transition: transform 0.3s ease;
        }

            .sidebar .nav-link {
                color: var(--sena-light);
                padding: 0.75rem 1rem;
                border-radius: 0.5rem;
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
            }

                .sidebar .nav-link::after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 100%;
                    top: 0;
                    left: 0;
                    background: rgba(255, 255, 255, 0.2);
                    transition: width 0.3s ease;
                }

                .sidebar .nav-link:hover::after, .sidebar .nav-link.active::after {
                    width: 100%;
                }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background: #009966;
                    transform: translateX(10px);
                }

        .btn-sena {
            background: var(--sena-gradient);
            color: var(--sena-light);
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 2rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 102, 51, 0.3);
        }

            .btn-sena:hover {
                background: linear-gradient(135deg, #009966, #00cc99);
                transform: scale(1.05);
            }

        .btn-logout {
            background: #f42d2d;
            color: var(--sena-light);
            border: none;
            border-radius: 2rem;
            transition: all 0.3s ease;
        }

            .btn-logout:hover {
                background: #c82333;
                transform: scale(1.05);
            }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background: var(--sena-green);
            color: var(--sena-light);
            border-bottom: none;
        }

        .table {
            background-color: var(--sena-light);
            border-radius: 0.5rem;
            overflow: hidden;
        }

            .table thead {
                background: var(--sena-gradient);
                color: var(--sena-light);
            }

        .table-hover tbody tr:hover {
            background-color: #d4e9d4;
            transition: background-color 0.3s ease;
        }

        .rounded-circle {
            object-fit: cover;
            border: 3px solid var(--sena-green);
            transition: transform 0.3s ease;
        }

            .rounded-circle:hover {
                transform: scale(1.1);
            }

        .main-content {
            padding: 2rem;
            animation: fadeIn 0.5s ease-in;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffecb5;
            color: #664d03;
            border-radius: 1rem;
            animation: bounceIn 0.5s ease;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        keyframes bounceIn {
            0%

        {
            transform: scale(0.9);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        media (max-width: 767.98px) {
            .sidebar

        {
            min-height: auto;
            position: static;
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar col-md-3 col-lg-2 d-md-block">
            <div class="position-sticky pt-3">
                <h4 class="px-3 mb-3 fw-bold text-shadow">Votaciones Admin</h4>
                <ul class="nav flex-column">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Limpiar", "Administradors")">
                            <i class="bi bi-plus-circle me-2"></i> Crear nueva Votaciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Postulados")">
                            <i class="bi bi-plus-circle me-2"></i> Ver Postulados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Postulados")">
                            <i class="bi bi-plus-circle me-2"></i> Crear Postulado
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Aprendizs")">
                            <i class="bi bi-plus-circle me-2"></i> Ingresar Aprendiz
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("CargarExcel", "Aprendizs")">
                            <i class="bi bi-plus-circle me-2"></i> Ingresar aprendices
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link btn-logout" href="@Url.Action("Login", "Home")">
                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-glow"><i class="bi bi-bar-chart-line me-2"></i>Resultados por Jornada</h2>
                <button class="btn btn-sena d-md-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            @if (Model != null && Model.Any())
            {
                var grupos = Model.GroupBy(p => p.Jornada);

                foreach (var grupo in grupos)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="mb-0"><i class="bi bi-clock me-2"></i>Jornada: @grupo.Key</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Foto</th>
                                            <th>Nombre</th>
                                            <th>Cantidad de Votos</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var p in grupo)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="@p.Foto" class="rounded-circle" width="50" height="50" alt="@p.Nombre" />
                                                </td>
                                                <td>@p.Nombre</td>
                                                <td>@p.CantidadVotos</td>
                                            </tr>
                                        }
                                        <tr class="table-warning fw-bold">
                                            <td colspan="2">TOTAL VOTOS JORNADA @grupo.Key</td>
                                            <td>@grupo.Sum(x => x.CantidadVotos)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    No hay postulados registrados.
                </div>
            }
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('active');
        });
    </script>
</body>
</html>