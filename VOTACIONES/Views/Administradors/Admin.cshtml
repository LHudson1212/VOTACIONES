@model IEnumerable<VOTACIONES.Models.Postulados>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administrador - Votaciones</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        /* 🎨 Colores institucionales del SENA */
        :root {
            --sena-green: #39A900;
            --sena-dark: #2E2E2E;
            --sena-light: #ffffff;
        }

        body {
            background-color: #f5f5f5;
        }

        .navbar {
            background-color: var(--sena-green) !important;
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--sena-light) !important;
        }

        .btn-sena {
            background-color: var(--sena-green);
            color: white;
            border: none;
        }

            .btn-sena:hover {
                background-color: #2e7d00;
                color: white;
            }

        .btn-logout {
            background-color: var(--sena-dark);
            color: white;
            border: none;
        }

            .btn-logout:hover {
                background-color: #1a1a1a;
                color: white;
            }

        h2, h3, h4 {
            color: var(--sena-dark);
        }

        .card-header {
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>
<body>

    <!-- Menú superior -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Administrador Votaciones</a>
            <div class="d-flex">
                <a href="@Url.Action("Index", "Postulados")" class="btn btn-sena me-2">📋 Ver Postulados</a>
                <a href="@Url.Action("Create", "Postulados")" class="btn btn-light me-2">➕ Crear Postulado</a>
                <a href="@Url.Action("Votacion", "Administradors")" class="btn btn-sena me-2">🗳 Ir a Votación</a>
                <a href="@Url.Action("Login", "Home")" class="btn btn-logout">🚪 Cerrar Sesión</a>
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <div class="container mt-4">
        <h2 class="mb-4 text-center">📊 Listado de Postulados</h2>

        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-hover">
                <thead class="table-success">
                    <tr>
                        <th>Foto</th>
                        <th>Nombre</th>
                        <th>Documento</th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                <img src="@p.Foto" class="rounded-circle shadow-sm" width="60" height="60" style="object-fit: cover;" />
                            </td>
                            <td>@p.Nombre</td>
                            
                            <td>@p.Jornada</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
