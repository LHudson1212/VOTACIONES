
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Sistema de Votación - SENA</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../CSS/index.css">

  <style>
    /* Tooltip personalizado */
    .tooltip-wrapper {
      position: relative;
      display: inline-block;
    }

    .tooltip-icon {
      background-color: #39A900;
      color: white;
      border-radius: 50%;
      padding: 2px 7px;
      font-weight: bold;
      font-size: 14px;
      margin-left: 6px;
      cursor: pointer;
    }

    .tooltip-box {
      visibility: hidden;
      opacity: 0;
      max-width: 280px;
      background-color: #333;
      color: #fff;
      text-align: left;
      border-radius: 6px;
      padding: 10px;
      position: absolute;
      bottom: 130%;
      left: 0;
      z-index: 1;
      transition: opacity 0.3s ease;
      font-size: 14px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      word-wrap: break-word;
      line-height: 1.4;
    }

    .tooltip-visible .tooltip-box {
      visibility: visible;
      opacity: 1;
    }

    /* Caja de login */
    .login-box {
      background-color: #ffffff;
      padding: 30px 40px;
      border-radius: 10px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      margin: 80px auto;
      text-align: center;
    }

    .login-box input {
      width: 95%;
      padding: 10px;
      margin-top: 8px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .btn {
      background-color: #006633;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 6px;
      width: 100%;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background-color: #004d26;
    }

   

      .tooltip-box {
        max-width: 90vw;
        left: 50%;
        transform: translateX(-50%);
        bottom: 130%;
        text-align: center;
      }
    
  </style>
</head>
<body>
    <div class="login-box">
        <img src="~/imagenes/sena logo.png" alt="Logo SENA" style="width: 130px; margin-bottom: 1px;">
        <h2>Sistema de Votación SENA</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <label for="documento">
                Número de Documento
                <span class="tooltip-wrapper" id="tooltipDoc">
                    <span class="tooltip-icon" onclick="mostrarTooltip('tooltipDoc')">?</span>
                    <span class="tooltip-box">Debe ingresar su número de documento</span>
                </span>
            </label>
            <input type="number" id="documento" name="documento" required="" placeholder="Ingrese su número de documento" onclick="mostrarTooltip('tooltipDoc')" />

            <label for="contrasena">
                Contraseña
                <span class="tooltip-wrapper" id="tooltipPass">
                    <span class="tooltip-icon" onclick="mostrarTooltip('tooltipPass')">?</span>
                    <span class="tooltip-box">La contraseña es tu número de identificación.</span>
                </span>
            </label>
            <input type="password" id="contrasena" name="contrasena" placeholder="Ingrese su contraseña" required
                   onclick="mostrarTooltip('tooltipPass')" onfocus="mostrarTooltip('tooltipPass')" />

            <button type="submit" class="btn">Ingresar</button>
        }

        @if (ViewBag.Error != null)
        {
            <p style="color:red">@ViewBag.Error</p>
        }
    </div>


    <script>
        let tooltipTimeout;

        function mostrarTooltip(id) {
            const wrapper = document.getElementById(id);

            // Elimina cualquier anterior
            clearTimeout(tooltipTimeout);
            document.querySelectorAll('.tooltip-wrapper').forEach(el => el.classList.remove('tooltip-visible'));

            // Muestra el nuevo
            wrapper.classList.add('tooltip-visible');

            // Oculta después de 3 segundos
            tooltipTimeout = setTimeout(() => {
                wrapper.classList.remove('tooltip-visible');
            }, 3000);
        }
    </script>

</body>
</html>