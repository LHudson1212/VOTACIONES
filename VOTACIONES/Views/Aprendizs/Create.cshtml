@model VOTACIONES.Models.Aprendiz

@{
    ViewBag.Title = "Crear Aprendiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* === Estilo Global (igual que Importar Aprendices) === */
    .card {
        border-radius: 1rem;
    }

    .card-header {
        background: linear-gradient(135deg, #006633, #009966);
        color: white;
        font-weight: bold;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .btn {
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-sena {
        background: linear-gradient(135deg, #006633, #009966);
        color: white;
        border: none;
    }

        .btn-sena:hover {
            background: linear-gradient(135deg, #009966, #00cc99);
            transform: scale(1.05);
            color: white;
        }

    .btn-outline-dark {
        border-radius: 0.75rem;
    }

    .form-control {
        border-radius: 0.75rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header">
            <h3><i class="bi bi-person-plus-fill"></i> Crear Aprendiz</h3>
        </div>
        <div class="card-body p-4">

            <!-- Botones de navegación -->
            <div class="text-end mb-4">
                <a href="@Url.Action("Index", "Aprendizs")" class="btn btn-sena px-4">
                    <i class="bi bi-list-ul"></i> Lista de Aprendices
                </a>

                <a href="@Url.Action("Admin", "Administradors")" class="btn btn-sena px-4">
                    <i class="bi bi-shield-lock-fill"></i> Administrador

                </a>

                <a href="@Url.Action("Admin", "Administradors")" class="btn btn-sena px-4">
                    <i class="bi bi-person-plus-fill"></i> Regresar
                </a>


                <a href="@Url.Action("Login", "Home")" class="btn btn-sena px-4">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>

            <!-- Formulario Crear Aprendiz -->
            @using (Html.BeginForm("Create", "Aprendizs", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="DocumentoIdentidad" class="form-label fw-bold">🆔 Documento de Identidad</label>
                    @Html.TextBoxFor(model => model.DocumentoIdentidad, new { @class = "form-control", placeholder = "Ingrese número de cédula", required = "required" })
                    @Html.ValidationMessageFor(model => model.DocumentoIdentidad, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-end gap-3">


                    <button type="submit" class="btn btn-sena px-5">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            }

            @if (TempData["Mensaje"] != null)
            {

                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
        </div>
    </div>
</div>