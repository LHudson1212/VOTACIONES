@model IEnumerable<VOTACIONES.Models.Postulados>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Votación - Jornada Mixta</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* --- TU CSS ORIGINAL SIN CAMBIOS --- */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .votacion-container {
            width: 90%;
            max-width: 600px;
            margin: 40px auto;
            padding: 30px 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            color: #006633;
            margin-bottom: 20px;
        }

        .candidatos {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .candidato {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

            .candidato:hover {
                transform: scale(1.05);
            }

            .candidato input[type="radio"] {
                display: none;
            }

            .candidato img {
                width: 140px;
                height: 140px;
                border-radius: 12px;
                border: 4px solid transparent;
                object-fit: cover;
                transition: 0.3s;
            }

            .candidato input[type="radio"]:checked + img {
                border-color: #39A900;
                box-shadow: 0 0 12px #39A900;
            }

            .candidato span {
                margin-top: 10px;
                font-weight: bold;
                font-size: 15px;
                color: #333;
            }

        button[type="button"] {
            margin-top: 25px;
            padding: 12px 25px;
            background-color: #39A900;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 17px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button[type="button"]:hover {
                background-color: #2b8a00;
            }

        footer {
            text-align: center;
            padding: 15px;
            background-color: #006633;
            color: white;
            font-size: 14px;
            margin-top: 40px;
        }

        media (max-width: 480px) {
            .candidato img

        {
            width: 100px;
            height: 100px;
        }

        .candidato span {
            font-size: 14px;
        }

        .votacion-container {
            padding: 20px 15px;
        }

        button[type="button"] {
            font-size: 16px;
            padding: 10px 20px;
        }

        h2 {
            font-size: 20px;
        }
        }
    </style>
</head>
<body>

    <div class="votacion-container">
        <h2>Votación Estudiantil - Jornada Mixta</h2>
        <form id="formularioVoto" method="post" action="@Url.Action("Votar","Aprendizs")">
            <!-- Aprendiz desde sesión -->
            <input type="hidden" name="aprendizId" value="@Session["AprendizId"]" />

            <p style="margin-bottom: 15px;">Seleccione su candidato:</p>

            <div class="candidatos">
                @foreach (var candidato in Model)
                {
                    <label class="candidato">
                        <input type="radio"
                               name="postuladoId"
                               value="@candidato.IdPostulado"
                               data-propuesta="@candidato.Propuestas"
                               data-aptitudes="@candidato.Aptitudes"
                               required>
                        <img src="@Url.Content(candidato.Foto)" alt="@candidato.Nombre">
                        <span>@candidato.Nombre</span>
                    </label>
                }
            </div>

            <button type="button" onclick="mostrarModal()">Votar</button>
        </form>
    </div>

    <!-- Modal Confirmación -->
    <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-3">
                <div class="modal-header">
                    <h1 class="modal-title fs-4">Confirmar voto</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <img id="modalImagen" src="" alt="Foto" width="140" class="rounded mb-2">
                    <h3 id="modalNombre"></h3>
                    <p><strong>Propuesta:</strong> <span id="modalPropuesta"></span></p>
                    <p><strong>Aptitudes:</strong> <span id="modalAptitudes"></span></p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-success" id="btnConfirmarVoto">Confirmar voto</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Voto Existente -->
    <div class="modal fade" id="modalVotoExistente" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-3">
                <div class="modal-header bg-warning">
                    <h1 class="modal-title fs-4 text-dark">⚠ Ya has votado</h1>
                </div>
                <div class="modal-body">
                    <p>Solo puedes votar una vez en toda la elección.</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Exito -->
    <div class="modal fade" id="modalVotoExitoso" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-3">
                <div class="modal-header bg-success">
                    <h1 class="modal-title fs-4 text-white">✅ Voto registrado</h1>
                </div>
                <div class="modal-body">
                    <p>¡Tu voto ha sido registrado correctamente!</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-primary" id="btnIrLogin">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function mostrarModal() {
            const seleccionado = document.querySelector('input[name="postuladoId"]:checked');
            if (!seleccionado) {
                alert("Seleccione un candidato antes de votar.");
                return;
            }

            const nombre = seleccionado.nextElementSibling.nextElementSibling.innerText;
            const propuesta = seleccionado.dataset.propuesta;
            const aptitudes = seleccionado.dataset.aptitudes;
            const imagen = seleccionado.nextElementSibling.getAttribute('src');

            document.getElementById('modalNombre').textContent = nombre;
            document.getElementById('modalPropuesta').textContent = propuesta;
            document.getElementById('modalAptitudes').textContent = aptitudes;
            document.getElementById('modalImagen').src = imagen;

            const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
            modal.show();
        }

        // Confirmar voto → enviar formulario
        document.getElementById("btnConfirmarVoto").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("formularioVoto").submit();
        });

        // Redirigir al login después de éxito
        document.getElementById("btnIrLogin").addEventListener("click", function () {
            window.location.href = '@Url.Action("Login", "Home")';
        });

        // Mostrar modales según TempData
        $(document).ready(function () {
            @if (TempData["VotoExitoso"] != null && (bool)TempData["VotoExitoso"] == true)
            {
                <text>$('#modalVotoExitoso').modal('show');</text>
            }
            @if (TempData["VotoExistente"] != null && (bool)TempData["VotoExistente"] == true)
            {
                <text>$('#modalVotoExistente').modal('show');</text>
            }
        });
    </script>

</body>
</html>
