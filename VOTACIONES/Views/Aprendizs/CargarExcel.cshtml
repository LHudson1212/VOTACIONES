@{
    ViewBag.Title = "Importar Aprendices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* === Estilo Global (igual que en Gestión de Postulados) === */
    .card {
        border-radius: 1rem;
    }

    .card-header {
        background: linear-gradient(135deg, #006633, #009966);
        color: white;
        font-weight: bold;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .btn {
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-sena {
        background: linear-gradient(135deg, #006633, #009966);
        color: white;
        border: none;
    }

        .btn-sena:hover {
            background: linear-gradient(135deg, #009966, #00cc99);
            transform: scale(1.05);
            color: white;
        }

    .btn-outline-dark {
        border-radius: 0.75rem;
    }

    /* Input */
    .form-control {
        border-radius: 0.75rem;
    }

    /* Previsualización */
    #fileLogo img {
        width: 80px;
    }

    #previewContainer {
        max-height: 350px;
        overflow-y: auto;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header">
            <h3><i class="bi bi-file-earmark-excel-fill"></i> Ingresar Aprendices</h3>
        </div>
        <div class="card-body p-4">

            <!-- Botones de navegación -->
            <div class="text-end mb-4">

                <a href="@Url.Action("Index", "Postulados")" class="btn btn-sena px-4">
                    <i class="bi bi-list-ul"></i> Lista de Postulados
                </a>

                <a href="@Url.Action("Create", "Postulados")" class="btn btn-sena px-4">
                    <i class="bi bi-list-ul"></i> Crear postulado 
                </a>
                <a href="@Url.Action("Create", "Aprendizs")" class="btn btn-sena px-4">
                    <i class="bi bi-list-ul"></i> Ingresar aprendiz
                </a>
           

                <a href="@Url.Action("Admin", "Administradors")" class="btn btn-sena px-4">
                    <i class="bi bi-person-plus-fill"></i> Regresar
                </a>


                <a href="@Url.Action("Login", "Home")" class="btn btn-sena px-4">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>

            <!-- Formulario para cargar Excel -->
            @using (Html.BeginForm("CargarExcel", "Aprendizs", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3 text-center">
                    <label for="archivoExcel" class="form-label fw-bold">📂 Seleccione el archivo Excel</label>
                    <input type="file" id="archivoExcel" name="archivoExcel" class="form-control" accept=".xlsx" required />

                    <!-- Logo -->
                    <div id="fileLogo" class="mt-3" style="display:none;">
                        <img src="https://cdn-icons-png.flaticon.com/512/732/732220.png" alt="Excel Logo" class="mb-2" />
                        <p class="text-success fw-bold">Archivo cargado correctamente</p>
                    </div>
                </div>

                if (TempData["Mensaje"] != null)
                {

                    <div class="alert alert-success">@TempData["Mensaje"]</div>
                }
                if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }


                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-sena px-5">
                        <i class="bi bi-upload"></i> Importar
                    </button>

                    <button type="button" id="previewBtn" class="btn btn-outline-dark px-5">
                        <i class="bi bi-eye"></i> Previsualizar
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Tabla de previsualización -->
    <div id="previewContainer" class="mt-4 card shadow border-0 rounded-4" style="display:none;">
        <div class="card-header">
            <h4><i class="bi bi-table"></i> Vista previa del archivo</h4>
        </div>
        <div class="card-body table-responsive">
            <table id="previewTable" class="table table-bordered table-striped text-center"></table>
        </div>
    </div>
</div>

<!-- SheetJS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

<script>
    const fileInput = document.getElementById("archivoExcel");
    const fileLogo = document.getElementById("fileLogo");
    const previewBtn = document.getElementById("previewBtn");
    const previewContainer = document.getElementById("previewContainer");
    const previewTable = document.getElementById("previewTable");

    fileInput.addEventListener("change", () => {
        fileLogo.style.display = fileInput.files.length > 0 ? "block" : "none";
    });

    previewBtn.addEventListener("click", () => {
        const file = fileInput.files[0];
        if (!file) {
            alert("⚠ Seleccione un archivo primero.");
            return;
        }

        const reader = new FileReader();
        reader.onload = (e) => {
            const data = new Uint8Array(e.target.result);
            const workbook = XLSX.read(data, { type: "array" });

            const sheetName = workbook.SheetNames[0];
            const sheet = workbook.Sheets[sheetName];
            const rows = XLSX.utils.sheet_to_json(sheet, { header: 1 });

            let html = "<thead><tr>";
            rows[0].forEach(cell => { html += `<th>${cell}</th>`; });
            html += "</tr></thead><tbody>";

            for (let i = 1; i < Math.min(rows.length, 11); i++) {
                html += "<tr>";
                rows[i].forEach(cell => { html += `<td>${cell ?? ""}</td>`; });
                html += "</tr>";
            }
            html += "</tbody>";

            previewTable.innerHTML = html;
            previewContainer.style.display = "block";
        };
        reader.readAsArrayBuffer(file);
    });
</script>