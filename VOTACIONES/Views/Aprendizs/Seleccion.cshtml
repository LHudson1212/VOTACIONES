@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Seleccionar Jornada</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f5;
            text-align: center;
            padding: 40px 20px;
        }

        h1 {
            margin-bottom: 30px;
            font-weight: bold;
            color: #004d26;
        }

        .boton-jornada, .btn-sena {
            width: 100%;
            max-width: 400px;
            margin: 10px auto;
            padding: 14px 20px;
            background-color: #006633;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .boton-jornada:disabled {
                background-color: #ccc;
                cursor: not-allowed;
            }

            .boton-jornada:hover:enabled, .btn-sena:hover {
                background-color: #004d26;
                transform: scale(1.03);
            }
    </style>
</head>
<body>

    <h1>Seleccione su jornada</h1>

    <button class="btn-sena" onclick="mostrarInstrucciones()">📝 Ver instrucciones</button>

    <button id="btnDiurna" class="boton-jornada" disabled
            onclick="location.href='@Url.Action("Diurna", "Aprendizs")'">
        🌞 Jornada Diurna
    </button>

    <button id="btnMixta" class="boton-jornada" disabled
            onclick="location.href='@Url.Action("Mixta", "Aprendizs")'">
        🌓 Jornada Mixta
    </button>


    <!-- Modal -->
    <div id="modalInstrucciones" class="modal" role="dialog" aria-modal="true" aria-labelledby="tituloInstrucciones"
         style="display:none; position:fixed; z-index:9999; padding:10px; left:0; top:0; width:100%; height:100%; background:rgba(0,0,0,0.5); overflow-y:auto;">
        <div class="modal-contenido" style="background-color:white; margin:10% auto; padding:25px 30px; border-radius:15px; max-width:500px;">
            <span class="cerrar" onclick="cerrarModal()" aria-label="Cerrar instrucciones"
                  style="float:right; font-size:24px; font-weight:bold; color:#999; cursor:pointer;">&times;</span>
            <h2 id="tituloInstrucciones" class="mb-3">🗳️ Instrucciones de Votación</h2>
            <p class="text-start">Antes de emitir tu voto, por favor ten en cuenta lo siguiente:</p>
            <ul>
                <li>✅ Solo puedes votar una vez.</li>
                <li>🌞 Jornada Diurna (6:00 am - 1:00 pm).</li>
                <li>🌓 Jornada Mixta (1:01 pm - 6:00 pm).</li>
                <li>🔐 Selecciona bien tu jornada.</li>
                <li>⏱️ La votación estará habilitada hasta las <strong>6:00 PM</strong>.</li>
            </ul>
            <button class="btn-sena mt-3" onclick="cerrarModal()">Entendido</button>
        </div>
    </div>

    <script>
        function mostrarInstrucciones() {
            document.getElementById('modalInstrucciones').style.display = 'block';
        }

        function cerrarModal() {
            document.getElementById('modalInstrucciones').style.display = 'none';
        }

        window.onclick = function (event) {
            const modal = document.getElementById('modalInstrucciones');
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // Activar botones según hora
        window.onload = function () {
            const ahora = new Date();
            const hora = ahora.getHours();
            const minuto = ahora.getMinutes();

            const btnDiurna = document.getElementById("btnDiurna");
            const btnMixta = document.getElementById("btnMixta");

            // Diurna: 6:00 a 13:00 (inclusive)
            if (hora >= 6 && (hora < 13 || (hora === 13 && minuto === 0))) {
                btnDiurna.disabled = false;
            }

            // Mixta: 13:01 a 18:00
            if ((hora > 13 || (hora === 13 && minuto > 0)) && hora < 18) {
                btnMixta.disabled = false;
            }
        }
    </script>

</body>
</html>