@model VOTACIONES.Models.Postulados

@{
    ViewBag.Title = "Eliminar Postulado";
    Layout = "~/Views/Shared/_Layout.cshtml"; // usa tu layout principal
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="bi bi-exclamation-triangle-fill"></i> Confirmar eliminación</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">
                        ¿Estás seguro que deseas eliminar este postulado?
                    </h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">Propuestas</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Propuestas)</dd>

                        <dt class="col-sm-4">Aptitudes</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Aptitudes)</dd>

                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    </dl>

                    @using (Html.BeginForm("Delete", "Postulados", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdPostulado)

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary px-4 ms-2" })
                        </div>
                    }
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Hudson Store - Sistema de Votaciones</small>
                </div>
            </div>
        </div>
    </div>
</div>